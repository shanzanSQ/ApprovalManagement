        @if (Model.IouLogSection != null)
        {
            <table width="100%" border="1">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.IouLogSection)
                    {
