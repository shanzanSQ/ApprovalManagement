        <table border="1" width="100%" id="genaralInfodt">
            @{float countFob = 1;}
            <caption>Invoice Details</caption>
            <thead>
                <tr>
                    <th>SL</th>
                    <th>PO No</th>
                    <th>Article</th>
                    <th>Color</th>
                    <th>Size</th>
                    <th>UoM</th>
                    <th>Rate</th>
                    @if (Model.ApproverList.Where(s => s.ApproverNo == 2).Single().UserID == (int)Session["SQuserId"])
                    {
                        <th>Initial Invoice Value</th>
                    }
                    <th>Invoice Qty</th>
                    @*@if (Model.ApproverList.Where(s => s.ApproverNo == 1).Single().UserID == (int)Session["SQuserId"])
                    {*@
                    <th>Verified Qty</th>
                    @*}*@
                    <th>Invoice Value</th>
                    <th>Verified Value</th>
                    <th>Discount</th>
                    <th>Total Paid</th>
                </tr>
            </thead>
            <tbody id="invoiceDetails">
                @{ decimal r = 0; decimal TotalQty = 0; decimal checkQty = 0; decimal inputQty = 0; decimal TotalDiscount = 0; decimal IQty = 0; decimal TotalInvoiceValue = 0; decimal TotalVerifiedValue = 0;}
                @foreach (var item in Model.BillInfoList)
                {
                    <tr id='@item.PODetailsKey'>
                        <td>@countFob</td>
                        <td>@item.PONo</td>
                        <td>@item.Article</td>
                        <td>@item.Color</td>
                        <td>@item.Size</td>
                        <td>@item.Unit</td>
                        <td><span id="apporver_Rate_@item.PODetailsKey">@item.Rate.ToString()</span></td>
                        @if (Model.ApproverList.Where(s => s.ApproverNo == 2).Single().UserID == (int)Session["SQuserId"])
                        {
                            <td>@item.FirstEntryQty</td>
                        }
                        <td><span id="apporver_InvoiceQty_@item.PODetailsKey"> @item.InvoiceQty.ToString() </span></td>
                        @if (Model.ApproverList.Where(s => s.ApproverNo == 1).Single().UserID == (int)Session["SQuserId"])
                        {
                            <td><input class="checked_qty" id="checked_qty_@item.PODetailsKey" value="@item.InvoiceQty" onkeyup="chengeVerifyQty()" /></td>
                        }
                        else
                        {
                            <td>@item.CheckedQty</td>
                        }
                        <td><span id="apporver_invoiceValue_@item.PODetailsKey">@item.InvoiceValue.ToString()</span></td>
                        <td><span id="apporver_verifyValue_@item.PODetailsKey">@item.CheckedValue.ToString()</span></td>
                        <td>@item.Discount.ToString()</td>
                        <td>@item.Total.ToString()</td>
                    </tr>

                    r += @item.Rate;
                    TotalQty += item.InvoiceQty;
                    checkQty += item.CheckedQty;
                    inputQty += item.InvoiceQty;
                    TotalInvoiceValue += item.InvoiceValue;
                    TotalVerifiedValue += item.CheckedValue;
                    TotalDiscount += item.Discount;
                    IQty += item.FirstEntryQty;
                    countFob++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="6">Total </th>
                    <th>@r</th>
                    @if (Model.ApproverList.Where(s => s.ApproverNo == 2).Single().UserID == (int)Session["SQuserId"])
                    {
                        <th>@IQty</th>
                    }
                    <th>@TotalQty</th>
                    @if (Model.ApproverList.Where(s => s.ApproverNo == 1).Single().UserID == (int)Session["SQuserId"])
                    {
                        <th><span id="input_Qty"> @inputQty </span></th>
                    }
                    else
                    {
                        <th>@checkQty</th>
                    }
                    <th>@TotalInvoiceValue</th>
                    <th><span id="verify_value">@TotalVerifiedValue</span></th>
                    @*@if (Model.ApproverList.Where(s => s.ApproverNo == 2).Single().UserID == (int)Session["SQuserId"])
                    {
                        <th></th>
                    }*@
                    <th>@TotalDiscount</th>
                    <th>@Model.TotalPaid.ToString()</th>
                </tr>
            </tfoot>
        </table>

