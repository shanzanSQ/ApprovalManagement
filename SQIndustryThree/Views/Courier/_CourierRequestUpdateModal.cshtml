        text-align: left;
    }

    td {
        text-align: left;
    }

    #genaralInfodt tr th, #genaralInfodt tr td, #approverlist tr td, #approverlist tr th {
        text-align: center;
    }
    .addbutton {
        height: 25px;
        width: 25px;
        border-radius: 50%;
    }
    #ammountsummeryList input[type=text], #ammountsummeryList input[type=number] {
