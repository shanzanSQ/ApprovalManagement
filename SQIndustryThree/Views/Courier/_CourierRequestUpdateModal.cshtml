                <br />
                <table width="100%" align="center">
                    <tr>
                        <td>
                            <button value="Comments" onclick="showComments()" class="btn btn-sm btn-primary">Comments</button>
                        </td>
                        <td style="padding:5px">
                            <select id="reviewComment" class="approvalColumn form-control">
