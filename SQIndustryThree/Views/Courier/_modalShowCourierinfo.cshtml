                <tbody>
                    <tr>
                        <td style="font-weight:bold" ; width="30%">Location Name</td>
                        <td width="70%">@Model.LocationName</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Business Unit</td>
                        <td>@Model.BusinessUnitName</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Department</td>
                        <td>@Model.DepartmentName</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Customer</td>
                        <td style="width:100%;overflow-wrap:break-word">@Model.Customer</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Receiver</td>
                        <td>@Model.Receiver</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Country </td>
                        <td>@Model.Country</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Post Code </td>
                        <td>@Model.PostCode</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Address </td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Dispatch Date</td>
                        <td>@Model.DispatchDate</td>
                    </tr>

                </tbody>
            </table>

        </div>
        <div class="col-md-6">
            <table style="overflow: scroll;overflow: auto;" class="table table-bordered">
                <tbody>

                    <tr>
                        <td style="font-weight:bold" ;>Delivery Date</td>
                        <td>@Model.Deliverydate</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Product Description </td>
                        <td>@Model.ProductDescription</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Weight(KG)</td>
                        <td>@Model.Weight</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Volume</td>
                        <td>@Model.Volume</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Airway Bill no. </td>
                        <td>@Model.AirwayBillno</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Courier</td>
                        <td>@Model.Courier</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Proposed Date</td>
                        <td>@Model.ProposedDate</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Cost</td>
                        <td>@Model.Cost</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold" ;>Remarks</td>
                        <td>@Model.Remarks</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>
@if (Model.CourierApproverList != null)
{
    <table border="1" width="100%" id="approverlist">
        <caption>Approver List</caption>
        <thead>
            <tr>
                <th>No</th>
                <th>Approver Name</th>
                <th>Approver Designation</th>
                <th>Approver Role</th>
                @*<th>Update Date</th>
                    <th>Status</th>
                    <th>Comment</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CourierApproverList)
            {
                <tr>
                    <td><p name="approverNo">@item.ApproverNo</p></td>
                    <td><p style="display:none" name="userId">@item.UserID</p><p name="userName">@item.UserName</p></td>

                    <td><p name="designationName">@item.DesignationName</p></td>


                    <td><p name="approverstatus">@item.ApproverStatusName</p></td>
                    @*<td>
                            <p style="display:none" name="apstatusid">@item.IsApprove</p>
                            @if (@item.UpdateDate != null)
                            {@DateTime.Parse(@item.UpdateDate).ToString("dd MMM yyyy")}
                        </td>
                        @{
                            if (item.IsApprove == 3)
                            {
                                <td style="color:red">Pending</td>
                            }
                            else if (item.IsApprove == 1)
                            {

                                <td style="color:green">Approved</td>
                            }
                            else if (item.IsApprove == 2)
                            {
                                <td style="color:red">Rejected</td>
                            }
                            else
                            {
                                <td style="color:darkblue">Not Sent</td>
                            }
                        }
                        <td>@item.Comments</td>*@
                </tr>

            }
        </tbody>
    </table>
}